<?xml version="1.0" encoding="utf-8"?>
<com.dimelo.dimelosdk.utilities.DMXMaxHeightLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/company_message_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingTop="3dp"
    android:paddingBottom="18dp"
    android:visibility="gone">

    <com.dimelo.dimelosdk.utilities.DMXEllipsizeTextView
        android:id="@+id/company_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start|top"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp" />

    <com.dimelo.dimelosdk.utilities.DMXEllipsizeTextView
        android:id="@+id/company_message_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="start|top"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp" />
</com.dimelo.dimelosdk.utilities.DMXMaxHeightLinearLayout>