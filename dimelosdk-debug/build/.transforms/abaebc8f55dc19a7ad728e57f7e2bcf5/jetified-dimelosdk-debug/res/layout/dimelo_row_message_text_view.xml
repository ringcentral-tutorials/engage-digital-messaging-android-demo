<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_placeholder"
    android:paddingRight="@dimen/dimelo_user_message_bubble_right_padding"
    android:paddingEnd="@dimen/dimelo_user_message_bubble_right_padding"
    android:paddingLeft="@dimen/dimelo_user_message_bubble_left_padding"
    android:paddingStart="@dimen/dimelo_user_message_bubble_left_padding"
    android:paddingTop="@dimen/dimelo_user_message_bubble_top_padding"
    android:paddingBottom="@dimen/dimelo_user_message_bubble_bottom_padding"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:layout_gravity="center_vertical"
        android:gravity="start|center_vertical"
        android:textColor="#000000"
        android:textSize="@dimen/dimelo_message_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dimelo_message_bubble_max_width"
        android:textIsSelectable="true"
        android:autoLink="web"
        />
</FrameLayout>
