<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">#FFF</item>
    </style>

    <style name="TextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#000</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="SelectionSwitch" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/grey_500</item>
        <item name="colorControlActivated">@color/ColorPrimaryDark</item>
    </style>
</resources>