<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewflipper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@color/purple_50"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="25px"
            android:paddingRight="25px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_800"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:textStyle="bold"
                android:text="MyTelecom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_800"
                android:gravity="center_horizontal"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:text="@string/telecom_welcome" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="0px">

            <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/abc_text_size_large_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Billing" />

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/abc_text_size_large_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upgrade your Phone" />

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/abc_text_size_large_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonus Features" />

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/abc_text_size_large_material"
                android:id="@+id/live_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online Support" />

            <Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <!-- Chat Layout -->
    <FrameLayout
        android:id="@+id/chat_telecom_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</ViewFlipper>

